{
  "name": "Booking",
  "type": "object",
  "properties": {
    "user_id": {
      "type": "string"
    },
    "counsellor_id": {
      "type": "string"
    },
    "counsellor_name": {
      "type": "string"
    },
    "booking_time": {
      "type": "string",
      "format": "date-time"
    },
    "status": {
      "type": "string",
      "enum": [
        "requested",
        "confirmed",
        "completed",
        "cancelled"
      ],
      "default": "requested"
    },
    "notes": {
      "type": "string"
    },
    "is_anonymous": {
      "type": "boolean",
      "default": true
    }
  },
  "required": [
    "user_id",
    "counsellor_id",
    "booking_time"
  ]
}
